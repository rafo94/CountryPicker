<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/phone_number"
        android:textColor="@color/primaryColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <am.gg.main.picker.CountryCodePicker
        android:id="@+id/countryPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_gray_round_10"
        android:gravity="center"
        android:paddingHorizontal="12dp"
        android:paddingVertical="18dp"
        app:arrowColor="@color/red"
        app:backGroundColor="@color/black"
        app:contentColor="@color/primaryColor"
        app:defaultNameCode="AM"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_no"
        app:searchColor="@color/gray"
        app:searchIconColor="@color/green_500"
        app:showArrowDown="true"
        app:showFlag="false"
        app:showNameCode="false"
        app:showPhoneCode="true"
        app:textColor="@color/white" />

    <EditText
        android:id="@+id/numberEt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/background_gray_round_10"
        android:digits="0123456789"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/phone_number"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="15"
        android:paddingHorizontal="12dp"
        android:singleLine="true"
        android:textColor="@color/primaryColor"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/countryPicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/countryPicker"
        app:layout_constraintTop_toTopOf="@id/countryPicker"
        tools:ignore="LabelFor" />

    <am.gg.main.countrypicker.progressbutton.ProgressButton
        android:id="@+id/progressButton"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:btn_elevation="0dp"
        app:btn_text_size="20sp"
        app:corner_radius="10dp"
        app:default_color="@color/primaryColor"
        app:default_text="Open"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>